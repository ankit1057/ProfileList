<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:baselineAligned="false"
    android:background="@android:color/transparent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/profile_margin"
    android:layout_marginLeft="@dimen/profile_margin"
    android:layout_marginTop="@dimen/profile_marginBorder"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">
    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profPic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="@dimen/profilepic_top"
            android:layout_marginTop="@dimen/profilepic_top"
            android:src="@drawable/noimg"
            android:layout_marginBottom="@dimen/profilepic_bottem"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/name_top"
            android:layout_marginStart="@dimen/profilepic_text_space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/latoregular"
                android:layout_marginBottom="@dimen/skills_name"
                android:textColor="@android:color/black"
                android:textSize="33sp" />

            <TextView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="8"
                android:fontFamily="@font/latolight"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>