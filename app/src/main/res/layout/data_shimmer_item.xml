<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_padding" android:baselineAligned="false">

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="140dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profPic"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginBottom="@dimen/profilepic_bottem"
            android:layout_marginStart="@dimen/profilepic_top"
            android:layout_marginTop="@dimen/profilepic_top"
            android:background="@color/shimmerItem_bg" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_marginEnd="40dp"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/profilepic_text_space"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/skills_name"
            android:layout_marginTop="@dimen/name_top"
            android:background="@color/shimmerItem_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="30dp"
            android:background="@color/shimmerItem_bg" />
    </LinearLayout>

</LinearLayout>